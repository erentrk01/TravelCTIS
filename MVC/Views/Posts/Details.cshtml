@model PostModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Post</h4>
    <hr />
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.PublishDate)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.PublishDate)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.LastUpdateDate)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.LastUpdateDate)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Location)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.Location)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.Rating)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.SustainabilityScore)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.SustainabilityScore)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.ImageURL)
            </dt>
            <dd class="col-10">
            <img height="200" width="400" src="@Model.ImageURL" class="card-img-top" alt="Post Image" />
            
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.YouTubeURL)
            </dt>
            <dd class="col-10">
                
            @if (!string.IsNullOrEmpty(Model.YouTubeURL))
            {
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe width="100%" height="300" class="embed-responsive-item" src="@Model.YouTubeURL" allowfullscreen></iframe>
                </div>
            }
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.BudgetPerDay)
            </dt>
            <dd class="col-10">
